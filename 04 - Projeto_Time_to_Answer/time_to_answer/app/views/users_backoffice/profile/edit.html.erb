<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Dados do perfil</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>


      <% if @user.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <ul>
            <% @user.errors.full_messages.each do |mensagem| %>
              <li><%= mensagem %></li>
            <% end %>
          </ul>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

        <br>
        <!-- variÃ¡vel user vem de edit -->
          <%= form_with(url: users_backoffice_profile_path, model: @user,local: true, class:"form-horizontal form-label-left") do |form| %>
          <div class="form-group">
            <%= form.label :first_name, class:"control-label col-md-3 col-sm-3
col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= form.text_field :first_name%>
            </div>
          </div>
          <div class="form-group">
            <%= form.label :last_name, class:"control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= form.text_field :last_name%>
            </div>
          </div>


        <div class="form-group">
          <%= form.label :email, class:"control-label col-md-3 col-sm-3 col-xs-12" %>
          <div class="col-md-6 col-sm-6 col-xs-12">
          <%= form.text_field :email, readonly: true %>
        </div>
        </div>

        <%= form.fields_for :user_profile do |profile_form| %>
            <div class="form-group">
              <%= profile_form.label :address%>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= profile_form.text_field :address %>
              </div>
            </div>


          <div class="btn-group" >
            <%= profile_form.label :gender, style:"margin-right: 10px;"%>
           <%= profile_form.radio_button :gender, "feminino",class:"btn-check", name: "options", style:"margin-right: 5px;" %>
            <label style="margin-right: 5px;">Feminino</label>
            <%= profile_form.radio_button :gender, "masculino",class:"btn-check", name: "options", style:"margin-right: 5px;" %>
            <label>Masculino</label>
          </div>

         <div class="form-group">
              <%= profile_form.label :birthdate%>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= profile_form.date_field :birthdate %>
              </div>
            </div>
      <% end %>

          <div class="form-group">
            <%= form.label :password %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= form.password_field :password %>
            </div>
          </div>
          <div class="form-group">
            <%= form.label :password_confirmation %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= form.password_field :password_confirmation %>
            </div>
          </div>
          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <button type="submit" class="btn btn-success">Enviar</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
