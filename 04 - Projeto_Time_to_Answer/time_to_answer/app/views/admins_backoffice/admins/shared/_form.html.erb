<h1><%= action_message %></h1>
<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <ul>
      <% @admin.errors.full_messages.each do |mensagem| %>
        <li><%= mensagem %></li>
      <% end %>
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<%= "#{action_message} Administrador"%>

<%= form_with(url: admins_backoffice_admins_path, model: @admin,local: true) do |form| %>
  <%= form.hidden_field :id%>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control", placeholder:"Informe o email"  %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control", placeholder:"Informe a senha"  %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Confirme a senha"  %>
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
<% end %>