<h2>Olá, Estou na Assunto-Controller</h2>

<h3>Listando os Assuntos</h3>

<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Id</th>
    <th scope="col">Descrição</th>
    <th>
      <%= link_to new_admins_backoffice_subjects_path, class:"btn btn-success btn-circle" do%>
        <i class="fa fa-plus" style="color: #FFFFFF;"></i>
      <% end %>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @subjects.each do |subject| %>
  <tr>
    <th scope="row"><%= subject.id %></th>
    <td><%= subject.description %></td>
    <td style="width: 150px;">
        <%= link_to edit_admins_backoffice_subjects_path(subject), class:"btn btn-primary btn-circle"  do %>
          <i class="fa fa-edit" style="color: #FFFFFF;"></i>
        <% end %>
      <%= button_to admins_backoffice_subjects_path(subject), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Confirma a exclusão do usuário?" } do %>
        <i class="fa fa-minus" style="color: #FFFFFF;"></i>
      <% end %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate @subjects %>
</div>